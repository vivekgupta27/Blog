<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/header') %>
    
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-4">
        <% if (locals.blog) { %>
            <h1><%=blog.title%></h1>
             <div class="mb-3">
                <img src="<%=blog.createdBy.ProfilePic%>" alt="image" width="30px">
                <span><%=blog.createdBy.fullName%></span>
             </div>
            <img src="<%= blog.coverImage %>" alt="image" width="700px" height="380px">
            <pre class="mt-2 text-wrap w-100" style="white-space: pre-wrap; overflow-x: hidden;"><%= blog.body %></pre>
                


            <div class="container">
                <h1>Comments(<%= comments.length %>)</h1>
                <% if (locals.user) { %>
                    <form  method="post"  action="/blog/comment/<%= blog._id %>" class="mb-3">
                        <input type="text" class="form-control mb-2"  placeholder="Add your comment" name="comment">
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>
                    </form>
                <% } %>
             
                <% if(locals.comments){%>
                    <% comments.forEach(comment => { %>
                        <div class="mb-3"><img src="<%=comment.createdBy.ProfilePic%>" alt="" width="30px"> <%=comment.createdBy.fullName%>:
                            <span><%=comment.content%></span></div>
                    <% }) %>
                <%}%>
           
            </div>
        <% }else{%>
            <h1>No Post Yet..</h1>
        <%}%>

       
       
    </div>
     
    <%- include('./partials/script') %>
</body>
</html>   